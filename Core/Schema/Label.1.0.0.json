{
    "key": "label",
    "version": "1.0.0",
    "domain": "core",
    "flow": "sys-schemas",
    "flowVersion": "1.0.0",
    "tags": [
        "Core",
        "Schema",
        "Label",
        "Localization"
    ],
    "attributes": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://schemas.amorphie.com/core/label.json",
        "title": "Multi-language Label Array",
        "description": "Çoklu dil desteği için kullanılan etiket dizisi yapısı. Her item label ve language alanlarına sahiptir.",
        "type": "array",
        "items": {
            "type": "object",
            "required": [
                "label",
                "language"
            ],
            "properties": {
                "label": {
                    "type": "string",
                    "description": "Kullanıcıya gösterilecek metin içeriği",
                    "maxLength": 500
                },
                "language": {
                    "type": "string",
                    "description": "ISO 639 formatında dil kodu",
                    "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
                    "maxLength": 10
                }
            },
            "additionalProperties": false
        },
        "minItems": 1,
        "examples": [
            [
                {
                    "label": "User Login",
                    "language": "en"
                },
                {
                    "label": "Kullanıcı Girişi",
                    "language": "tr"
                }
            ],
            [
                {
                    "label": "Data Processing",
                    "language": "en-US"
                },
                {
                    "label": "Veri İşleme",
                    "language": "tr-TR"
                }
            ]
        ]
    }
}